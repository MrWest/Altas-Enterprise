                        <TextBlock Text="{Binding CashPeriod}" FontWeight="SemiBold" Foreground="{DynamicResource DataGridColumnHeader.DarkDark.Foreground}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0"></TextBlock>
                        
                    </DockPanel>
                    <DockPanel Grid.Column="2">
