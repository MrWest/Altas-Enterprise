<UserControl x:Class="CompanyName.Atlas.Investments.Presentation.Views.BudgetItemManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Properties="clr-namespace:CompanyName.Atlas.Investments.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    
    <TabControl x:Name="tabControl">
        <TabItem Header="{x:Static Properties:Resources.EquipmentComponent}" DataContext="{Binding EquipmentComponent}">
        </TabItem>
        <TabItem Header="{x:Static Properties:Resources.ConstructionComponent}" DataContext="{Binding EquipmentComponent}">
        </TabItem>
        <TabItem Header="{x:Static Properties:Resources.OtherExpensesComponent}" DataContext="{Binding EquipmentComponent}">
        </TabItem>
        <TabItem Header="{x:Static Properties:Resources.WorkCapitalComponent}" DataContext="{Binding EquipmentComponent}">
        </TabItem>
    </TabControl>

</UserControl>
